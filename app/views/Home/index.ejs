<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Portal de not√≠cias</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

		<!-- favicon -->
		<link rel="shortcut icon" href="images/walmart.ico" />
	</head>

	<body>

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					
					<img src="images/Logo.png" />
				</div>

				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
						<li><a href="/login"> Login </a></li>
						<li><a href="/">HOME</a></li>
					</ul>
				</div>
			</div>
		</nav>


	    <div class="container">
	    	<div class="row">
	    		<div class="col-md-8">
	    			<div class="item_wrapper">
		    			<span class="item_id"><%= item[0].id%></span>
		    			<a href="item?id=<%= item[0].id %>" class="item_nome"><%= item[0].nome%></a>
		    			<span class="item_data"><%= item[0].data %></span>
		    			<span class= "item_preco"> R$ <%= item[0].preco %> </span>
		    			<br />
		    			<p class="item_descricao">
		    				<%= item[0].descricao %>
		    			</p>
		    		</div>
		    	</div>

	    		<div class="col-md-4">
	    			<div class="item_wrapper">
		    			<span class="item_id"><%= item[1].id%></span>
		    			<a href="item?id=<%= item[1].id %>" class="item_nome"><%= item[1].nome%></a>
		    			<span class="item_data"><%= item[1].data %></span>
		    			<span class= "item_preco"> R$ <%= item[1].preco %> </span>
		    			<br />
		    			<p class="item_descricao">
		    				<%= item[1].descricao %>
		    			</p>
		    		</div>
		    	</div>
	    	</div>

	    	<div class="row">
	    	<% for(var i=2;i< item.length ; i++){ %>
	    		<div class="col-md-4">
	    			<div class="item_wrapper">
		    			<span class="item_id"><%= item[i].id%></span>
		    			<a href="item?id=<%= item[i].id %>" class="item_nome"><%= item[i].nome%></a>
		    			<span class="item_data"><%= item[i].data %></span>
		    			<span class= "item_preco"> R$ <%= item[i].preco %> </span>
		    			<br />
		    			<p class="item_descricao">
		    				<%= item[i].descricao %>
		    			</p>
		    		</div>
		    	</div>
		    	<%} %>
	    	</div>

	    	<div class="row ver_mais">
	    		<button type="button" class="btn btn-default"><a href="listar_itens">Ver todos os itens</a></button>
	    	</div>

	    </div>
	
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	
	</body>
</html>